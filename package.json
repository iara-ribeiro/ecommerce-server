{
  "name": "ecommerce-server",
  "version": "1.0.0",
  "description": "Server used for the E-Commerce POC",
  "main": "index.js",
  "scripts": {
    "test": "mocha -r ts-node/register tests/**/*.spec.ts",
    "start": "node -r dotenv/config server.js",
    "stop": "pkill -sigint -f filemgmt",
    "doc": "typedoc --out documentation src",
    "tsc": "tsc",
    "tsc:prod": "tsc --sourceMap false",
    "clear-dist": "ts-node tools/clear-dist",
    "copy-assets": "ts-node tools/copy-assets",
    "lint": "tslint --project ./tsconfig.json",
    "build": "npm-run-all clear-dist tsc:prod copy-assets",
    "serve": "node ./dist/server.js",
    "watch": "ts-node-dev ./src/server.ts",
    "build:dev": "tsc --project tsconfig.json --sourceMap --outDir dist"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/iara-ribeiro/ecommerce-server.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/iara-ribeiro/ecommerce-server/issues"
  },
  "homepage": "https://github.com/iara-ribeiro/ecommerce-server#readme",
  "dependencies": {
    "@types/express": "^4.17.10",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "tslint": "^6.1.3",
    "typescript": "^4.1.3",
    "winston": "^3.3.3"
  }
}
